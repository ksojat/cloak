<packager-module version='1.0'>

    <property name='name'     value='clojure'/>
    <property name='revision' value='${ivy.packager.revision}'/>
    <property name='archive'  value='${name}-${revision}'/>

    <resource
        dest='archive'
        url='http://clojure.googlecode.com/files/clojure_1.0.0.zip'
        sha1='fa7c03be9b30e9462b71aead03ea4487c6b9aeac'/>

    <build>
        <move
            file='archive/clojure-1.0.0.jar'
            tofile='artifacts/jars/clojure.jar'/>
    </build>
</packager-module>
